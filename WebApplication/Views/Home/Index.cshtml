@model LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form action="Login" method="post" class="form-control p-lg-5">
    <div class="row">
        <div class="col-12 col-md-6">
            <label for="User_name">User Logged In</label> <br />
            <input type="text" name="User_name" value="" autocomplete="on" />
        </div>
        <div class="col-12 col-md-6">
            <label for="Password">Password</label> <br />
            <input type="Password" name="Password" value="" autocomplete="on" />
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <button class="btn-success btn-sm" type="submit">Submit</button>
        </div>
    </div>
</form>
